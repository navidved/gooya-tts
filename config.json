{
  "model": "vits2",
  "use_sdp": true,
  "use_transformer_flows": true,
  "transformer_flow_type": "fft",
  "use_spk_conditioned_encoder": false,
  "use_mel_posterior_encoder": true,
  "use_duration_discriminator": true,
  "data": {
    "training_files": "filelists/ali_train_phoneme.txt",
    "validation_files": "filelists/ali_val_phoneme.txt",
    "text_cleaners": [],
    "add_blank": true,
    "n_mel_channels": 80,
    "sampling_rate": 22050,
    "filter_length": 1024,
    "hop_length": 256,
    "win_length": 1024,
    "max_wav_value": 32768.0,
    "mel_fmin": 0.0,
    "mel_fmax": 11025.0
  },
  "train": {
    "log_interval": 100,
    "eval_interval": 1000,
    "save_interval": 5000,
    "seed": 1234,
    "epochs": 1000000,
    "learning_rate": 2e-4,
    "betas": [0.8, 0.99],
    "batch_size": 64,
    "fp16_run": true,
    "lr_decay": 0.999875,
    "segment_size": 8192,
    "c_mel": 45,
    "c_kl": 1.0,
    "grad_clip": 5.0,
    "num_workers": 16,
    "distributed": false,
    "dist_backend": "nccl",
    "warmup_epochs": 0,
    "grad_accumulation_steps": 1
  }
}